---
// Henter parametrene fra Astro.props
const { htmlheading = "h2", size = "medium", font = "Instrument Sans", stylingclasses = "text-[var(--color-primary-brown)]" } = Astro.props;
const Htmlheading = htmlheading;

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
  h1: "text-[5rem] md:text-[18.75rem] --font-main font-bold", // 80px → 300px
  h2: "text-[1.25rem] md:text-[2.5rem] --font-main font-bold", // 20px → 40px
  h3: "text-[1.125rem] md:text-[2.1875rem] --font-main font-bold ", // 18px → 35px
  h4: "text-[2.1875rem] md:text-[6.875rem] --font-main font-bold", // 35px → 110px
  h5: "text-[1.375rem] md:text-[6.875rem] --font-main font-bold", // 22px → 110px
  pstor: "text-[1.125rem] md:text-[2.1875rem] --font-main", // 18px → 35px
  microcopystor: "text-[0.90rem] md:text-[1.1rem] --font-main font-bold", // 12px → 22px
  microcopylille: "text-[0.625rem] md:text-[0.9375rem] --font-main font-regular", // 10px → 15px
  formheadings: "text-[1rem] md:text-[1.625rem] --font-main font-bold", // 16px → 26px
};

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige skrifttyper.
const fontClasses = {
  display: "font-display",
  sans: "font-sans",
  serif: "font-serif",
};
---

<Htmlheading class:list={[stylingclasses, sizeClasses[size], fontClasses[font]]}><slot /></Htmlheading>
