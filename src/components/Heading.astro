---
const { htmlheading = "h2", size = "h2", stylingclasses = "" } = Astro.props;
const Htmlheading = htmlheading;

const sizeClasses = {
  h1: "text-[5rem] md:text-[15rem] font-main font-bold",
  h2: "text-[1.6rem] md:text-[1.6rem] font-main font-bold",
  h3: "text-[1.125rem] md:text-[1.4rem] font-main font-bold",
  h4: "text-[2.1875rem] md:text-[6.875rem] font-main font-bold",
  h5: "text-[5.2rem] md:text-[9rem] font-main font-bold",
  pstor: "text-[1.125rem] md:text-[1.6rem] font-main",
  microcopystor: "text-[0.9rem] md:text-[1.1rem] font-main font-bold",
  microcopylille: "text-[0.625rem] md:text-[0.7rem] font-main font-regular",
  formheadings: "text-[1rem] md:text-[1.625rem] font-main font-bold",
};
---

<Htmlheading class:list={[sizeClasses[size], stylingclasses]}>
  <slot />
</Htmlheading>
