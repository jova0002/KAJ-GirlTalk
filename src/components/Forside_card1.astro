---
import Heading from "../components/Heading.astro";
import Text from "../components/Text.astro";
const {
    title = "",
    text = "",
    linkText = "",
    href = "#",
    variant = "arrow", // "arrow" | "spotify"
} = Astro.props;
---

<article class="bg-primary-brown p-10 flex flex-col justify-between min-h-[500px] border border-primary-beige">
    <div>
        <Heading size="h3" stylingclasses="text-primary-beige">
            {title}
        </Heading>

        <Text teksttype="brødtekst" stylingclasses="mt-6 text-primary-beige">
            {text}
        </Text>
    </div>

    <a href={href} class="mt-12 text-primary-beige inline-flex items-end justify-between gap-6 uppercase tracking-wide pb-2">
        <span class="border-b">{linkText}</span>

        {
            variant === "spotify" ? (
                <img src="/spotify1.svg" alt="Spotify" class="w-10 h-10" />
            ) : (
                <span aria-hidden="true" class="text-4xl leading-none">
                    →
                </span>
            )
        }
    </a>
</article>
